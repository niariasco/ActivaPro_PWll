@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer L
@{
    ViewData["Title"] = L["HomePageTitle"];
}
<!-- Título principal -->
<div class="container my-3 text-center">
    <h1 class="fw-bold" style="color:#1E4E8C; max-height: 600px; font-size:2.25rem; overflow: hidden;">
        Sistema de Tiquetes ActivaPro
    </h1>
</div>


<!-- Carrusel de Imágenes -->
<div id="carouselActivaPro" class="carousel slide mb-4" data-bs-ride="carousel" style="max-height: 600px; overflow: hidden;">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselActivaPro" data-bs-slide-to="0" class="active" aria-current="true" aria-label="@L["Slide"] 1"></button>
        <button type="button" data-bs-target="#carouselActivaPro" data-bs-slide-to="1" aria-label="@L["Slide"] 2"></button>
        <button type="button" data-bs-target="#carouselActivaPro" data-bs-slide-to="2" aria-label="@L["Slide"] 3"></button>
        <button type="button" data-bs-target="#carouselActivaPro" data-bs-slide-to="3" aria-label="@L["Slide"] 4"></button>
        <button type="button" data-bs-target="#carouselActivaPro" data-bs-slide-to="4" aria-label="@L["Slide"] 5"></button>
    </div>


    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Imagenes/s1.png" class="d-block w-100" alt="@L["AltProteinBars"]" style="height: 500px; object-fit: contain; background-color: #f8f9fa;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>@L["CaptionQuality"]</h5>
                <p>@L["CaptionNaturalIngredients"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/s2.png" class="d-block w-100" alt="@L["AltPlantProteins"]" style="height: 500px; object-fit: contain; background-color: #f8f9fa;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>@L["CaptionPlantProteins"]</h5>
                <p>@L["CaptionForAthletes"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/s3.png" class="d-block w-100" alt="@L["AltHealthyLife"]" style="height: 500px; object-fit: contain; background-color: #f8f9fa;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>@L["CaptionHealthyLifestyle"]</h5>
                <p>@L["CaptionEnergyDaily"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/s4.png" class="d-block w-100" alt="@L["AltFlavorVariety"]" style="height: 500px; object-fit: contain; background-color: #f8f9fa;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>@L["CaptionFlavorVariety"]</h5>
                <p>@L["CaptionFindFavorite"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/s5.png" class="d-block w-100" alt="@L["AltSupport247"]" style="height: 500px; object-fit: contain; background-color: #f8f9fa;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h5>@L["CaptionPersonalizedSupport"]</h5>
                <p>@L["CaptionWeHelpAlways"]</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselActivaPro" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">@L["Previous"]</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselActivaPro" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">@L["Next"]</span>
    </button>
</div>

<div class="container my-4">
    <div class="card main-card">
        <div class="card-body">
            <h2 class="card-title text-primary">@L["WhoWeAreTitle"]</h2>
            <p class="card-text">
                @L["WhoWeAreText"]
            </p>
            <h2 class="card-title text-primary mt-4">@L["PurposeTitle"]</h2>
            <p class="card-text">
                @L["PurposeText1"]
            </p>
            <p class="card-text">
                @L["PurposeText2"]
            </p>
        </div>
    </div>
</div>