@{
    ViewData["Title"] = "Asignación Manual";
    var ticketsPendientes = ViewBag.TicketsPendientes as List<ActivaPro.Application.DTOs.TicketPendienteAsignacionDTO>;
    var tecnicosDisponibles = ViewBag.TecnicosDisponibles as List<ActivaPro.Application.DTOs.TecnicoDisponibleDTO>;
}

<style>
    .hero-section {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        border-radius: 10px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .selectable-card {
        transition: all 0.3s ease;
        cursor: pointer;
        border: 2px solid transparent;
    }

        .selectable-card:hover {
            border-color: #667eea;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

        .selectable-card.selected {
            border-color: #667eea;
            background-color: #f0f4ff;
        }

    .tecnico-card {
        transition: all 0.3s ease;
    }

        .tecnico-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .carga-badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }

    .filter-section {
        background: linear-gradient(to right, #f8f9fa, #ffffff);
        border-left: 4px solid #11998e;
    }
</style>

<div class="container-fluid py-4">
    <!-- HERO SECTION -->
    <div class="hero-section shadow">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-2">
                    <i class="bi bi-person-fill-gear"></i> Asignación Manual de Tickets
                </h1>
                <p class="mb-0 fs-5">
                    Seleccione el técnico más adecuado para cada ticket según su criterio
                </p>
            </div>
            <div class="col-md-4 text-end">
                <div class="bg-white bg-opacity-25 rounded p-3">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="fs-6 mb-1">Tickets</div>
                            <div class="fs-2 fw-bold">@(ticketsPendientes?.Count ?? 0)</div>
                        </div>
                        <div class="col-6">
                            <div class="fs-6 mb-1">Técnicos</div>
                            <div class="fs-2 fw-bold">@(tecnicosDisponibles?.Count ?? 0)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BREADCRUMB -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index"><i class="bi bi-house"></i> Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Asignación Manual</li>
        </ol>
    </nav>

    <!-- MENSAJES -->
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill fs-5"></i>
            <strong>¡Éxito!</strong> @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill fs-5"></i>
            <strong>Error:</strong> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- FILTROS -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card filter-section shadow-sm">
                <div class="card-body">
                    <div class="row align-items-end">
                        <div class="col-md-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-filter"></i> Filtrar Tickets
                            </label>
                            <select id="filtroCategoria" class="form-select">
                                <option value="">Todas las categorías</option>
                                @if (ticketsPendientes != null)
                                {
                                    @foreach (var categoria in ticketsPendientes.Select(t => t.Categoria).Distinct())
                                    {
                                        <option value="@categoria">@categoria</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Prioridad</label>
                            <select id="filtroPrioridad" class="form-select">
                                <option value="">Todas las prioridades</option>
                                <option value="Crítica">Crítica</option>
                                <option value="Alta">Alta</option>
                                <option value="Media">Media</option>
                                <option value="Baja">Baja</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-funnel"></i> Filtrar Técnicos
                            </label>
                            <select id="filtroCarga" class="form-select">
                                <option value="">Todas las cargas</option>
                                <option value="Baja">Carga Baja</option>
                                <option value="Media">Carga Media</option>
                                <option value="Alta">Carga Alta</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-outline-secondary w-100" onclick="limpiarFiltros()">
                                <i class="bi bi-x-circle"></i> Limpiar Filtros
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- TICKETS PENDIENTES -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-ticket-detailed"></i> Tickets Pendientes
                        </h5>
                        <span class="badge bg-white text-primary fs-6" id="contadorTickets">
                            @(ticketsPendientes?.Count ?? 0)
                        </span>
                    </div>
                </div>
                <div class="card-body p-2">
                    @if (ticketsPendientes != null && ticketsPendientes.Any())
                    {
                        <div id="listaTickets" style="max-height: 700px; overflow-y: auto;">
                            @foreach (var ticket in ticketsPendientes.OrderBy(t => t.HorasRestantes ?? int.MaxValue))
                            {
                                var urgenciaColor = ticket.HorasRestantes.HasValue && ticket.HorasRestantes <= 6 ? "danger" :
                                ticket.HorasRestantes.HasValue && ticket.HorasRestantes <= 24 ? "warning" :
                                "success";

                                <div class="card selectable-card ticket-item mb-2"
                                     data-ticket-id="@ticket.IdTicket"
                                     data-ticket-titulo="@ticket.Titulo"
                                     data-ticket-categoria="@ticket.Categoria"
                                     data-ticket-prioridad="@ticket.Prioridad"
                                     data-categoria="@ticket.Categoria"
                                     data-prioridad="@ticket.Prioridad">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center gap-2 mb-2">
                                                    <strong class="text-primary fs-5">Ticket #@ticket.IdTicket</strong>
                                                    @{
                                                        var prioridadBadge = ticket.Prioridad switch
                                                        {
                                                            "Crítica" => "bg-danger",
                                                            "Alta" => "bg-warning text-dark",
                                                            "Media" => "bg-info",
                                                            _ => "bg-secondary"
                                                        };
                                                    }
                                                <span class="badge @prioridadBadge">@ticket.Prioridad</span>
                                                <span class="badge bg-secondary">@ticket.Categoria</span>
                                            </div>
                                            <h6 class="mb-2">@ticket.Titulo</h6>
                                            <p class="text-muted small mb-2">
                                                @(ticket.Descripcion.Length > 100
                                                                                            ? ticket.Descripcion.Substring(0, 100) + "..."
                                                                                            : ticket.Descripcion)
                                        </p>
                                        @if (ticket.HorasRestantes.HasValue)
                                                {
                                                    var urgenciaClass = ticket.HorasRestantes <= 6 ? "text-danger" :
                                                    ticket.HorasRestantes <= 24 ? "text-warning" :
                                                    "text-success";
                                                    <div class="@urgenciaClass fw-bold">
                                                        <i class="bi bi-clock-fill"></i>
                                                        <strong>@ticket.HorasRestantes h restantes</strong>
                                                        <small class="text-muted ms-2">
                                                            Vence: @ticket.FechaLimiteResolucion?.ToString("dd/MM HH:mm")
                                                        </small>
                                                    </div>
                                                }
                                                <div class="mt-2">
                                                    <small class="text-muted">
                                                        <i class="bi bi-calendar3"></i>
                                                        Creado: @ticket.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-end">
                                            <button type="button" class="btn btn-primary select-ticket-btn">
                                                <i class="bi bi-arrow-right"></i> Seleccionar
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                            <p class="text-muted mt-3 fs-5">No hay tickets pendientes de asignación</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- TÉCNICOS DISPONIBLES -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-people-fill"></i> Técnicos Disponibles
                        </h5>
                        <span class="badge bg-white text-success fs-6" id="contadorTecnicos">
                            @(tecnicosDisponibles?.Count ?? 0)
                        </span>
                    </div>
                </div>
                <div class="card-body p-2">
                    @if (tecnicosDisponibles != null && tecnicosDisponibles.Any())
                    {
                        <div id="listaTecnicos" style="max-height: 700px; overflow-y: auto;">
                            @foreach (var tecnico in tecnicosDisponibles)
                            {
                                var cargaClass = tecnico.NivelCarga switch
                                {
                                    "Baja" => "success",
                                    "Media" => "warning",
                                    "Alta" => "danger",
                                    _ => "secondary"
                                };

                                <div class="card tecnico-card mb-2"
                                     data-carga="@tecnico.NivelCarga">
                                    <div class="card-body p-3">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <h5 class="mb-2">
                                                    <i class="bi bi-person-badge text-@cargaClass"></i>
                                                    @tecnico.NombreTecnico
                                                </h5>
                                                <p class="text-muted small mb-2">
                                                    <i class="bi bi-envelope"></i> @tecnico.CorreoTecnico
                                                </p>

                                                <!-- Estadísticas del Técnico -->
                                                <div class="row text-center mb-3">
                                                    <div class="col-4">
                                                        <div class="small text-muted">Activos</div>
                                                        <h5 class="mb-0 text-@cargaClass">@tecnico.TicketsActivos</h5>
                                                    </div>
                                                    <div class="col-4">
                                                        <div class="small text-muted">Asignados</div>
                                                        <h5 class="mb-0">@tecnico.TicketsPendientes</h5>
                                                    </div>
                                                    <div class="col-4">
                                                        <div class="small text-muted">En Proceso</div>
                                                        <h5 class="mb-0">@tecnico.TicketsEnProceso</h5>
                                                    </div>
                                                </div>

                                                <!-- Badges de Estado -->
                                                <div class="d-flex gap-2 mb-2 flex-wrap">
                                                    <span class="badge bg-@cargaClass carga-badge">
                                                        Carga: @tecnico.NivelCarga
                                                    </span>
                                                    @if (tecnico.Disponible)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle"></i> Disponible
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle"></i> No disponible
                                                        </span>
                                                    }
                                                </div>

                                                <!-- Especialidades -->
                                                @if (tecnico.Especialidades != null && tecnico.Especialidades.Any())
                                                {
                                                    <div class="mt-2">
                                                        <small class="text-muted fw-bold">Especialidades:</small>
                                                        <div class="d-flex gap-1 flex-wrap mt-1">
                                                            @foreach (var esp in tecnico.Especialidades)
                                                            {
                                                                <span class="badge bg-light text-dark border">
                                                                    <i class="bi bi-award"></i> @esp
                                                                </span>
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                            <p class="text-muted mt-3 fs-5">No hay técnicos disponibles</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- BOTÓN FLOTANTE VOLVER -->
    <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow"
       style="position: fixed; bottom: 30px; left: 30px; z-index: 1000;">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</div>

<!-- MODAL DE ASIGNACIÓN -->
<div class="modal fade" id="modalAsignacion" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="AsignarTicketManualmente" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-success text-white">
                    <h4 class="modal-title">
                        <i class="bi bi-person-fill-gear"></i> Confirmar Asignación Manual
                    </h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Información del Ticket -->
                    <div class="card mb-3 border-primary">
                        <div class="card-header bg-primary text-white">
                            <strong><i class="bi bi-ticket-detailed"></i> Ticket Seleccionado</strong>
                        </div>
                        <div class="card-body">
                            <input type="hidden" id="hiddenIdTicket" name="idTicket" />
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <strong>ID:</strong> <span id="modalTicketId" class="text-primary fs-5"></span>
                                    </p>
                                    <p class="mb-2">
                                        <strong>Categoría:</strong>
                                        <span id="modalTicketCategoria" class="badge bg-secondary"></span>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2">
                                        <strong>Prioridad:</strong>
                                        <span id="modalTicketPrioridad" class="badge"></span>
                                    </p>
                                </div>
                            </div>
                            <p class="mb-0">
                                <strong>Título:</strong><br>
                                <span id="modalTicketTitulo"></span>
                            </p>
                        </div>
                    </div>

                    <!-- Selección de Técnico -->
                    <div class="mb-3">
                        <label for="selectTecnico" class="form-label fw-bold fs-5">
                            <i class="bi bi-person-fill-check"></i> Seleccionar Técnico:
                        </label>
                        <select id="selectTecnico" name="idTecnico" class="form-select form-select-lg" required>
                            <option value="">-- Seleccione un técnico --</option>
                            @if (tecnicosDisponibles != null)
                            {
                                @foreach (var tecnico in tecnicosDisponibles.OrderBy(t => t.TicketsActivos))
                                {
                                    <option value="@tecnico.IdTecnico"
                                            data-carga="@tecnico.NivelCarga"
                                            data-activos="@tecnico.TicketsActivos">
                                        @tecnico.NombreTecnico - Carga: @tecnico.NivelCarga (@tecnico.TicketsActivos activos)
                                    </option>
                                }
                            }
                        </select>
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i>
                            Se recomienda seleccionar técnicos con carga baja
                        </small>
                    </div>

                    <!-- Justificación -->
                    <div class="mb-3">
                        <label for="txtJustificacion" class="form-label fw-bold">
                            <i class="bi bi-chat-left-text"></i> Justificación de la Asignación:
                        </label>
                        <textarea id="txtJustificacion" name="justificacion"
                                  class="form-control" rows="4"
                                  placeholder="Indique el motivo de esta asignación manual (ej: experiencia previa con casos similares, cliente VIP, urgencia especial, etc.)"></textarea>
                        <small class="text-muted">
                            <i class="bi bi-lightbulb"></i>
                            Opcional pero recomendado para documentación
                        </small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-lg" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="submit" class="btn btn-success btn-lg shadow">
                        <i class="bi bi-check-circle"></i> Confirmar Asignación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Seleccionar ticket
            $('.ticket-item').on('click', function() {
                $('.ticket-item').removeClass('selected');
                $(this).addClass('selected');
            });

            // Abrir modal de asignación
            $('.select-ticket-btn').on('click', function(e) {
                e.stopPropagation();

                var $ticket = $(this).closest('.ticket-item');

                // Verificar si hay un ticket seleccionado
                if (!$ticket.hasClass('selected')) {
                    $ticket.addClass('selected');
                }

                var ticketId = $ticket.data('ticket-id');
                var ticketTitulo = $ticket.data('ticket-titulo');
                var ticketCategoria = $ticket.data('ticket-categoria');
                var ticketPrioridad = $ticket.data('ticket-prioridad');

                // Determinar clase de prioridad
                var prioridadClass = 'bg-secondary';
                if (ticketPrioridad === 'Crítica') prioridadClass = 'bg-danger';
                else if (ticketPrioridad === 'Alta') prioridadClass = 'bg-warning text-dark';
                else if (ticketPrioridad === 'Media') prioridadClass = 'bg-info';

                // Llenar modal
                $('#hiddenIdTicket').val(ticketId);
                $('#modalTicketId').text('#' + ticketId);
                $('#modalTicketTitulo').text(ticketTitulo);
                $('#modalTicketCategoria').text(ticketCategoria);
                $('#modalTicketPrioridad').text(ticketPrioridad)
                    .removeClass('bg-danger bg-warning bg-info bg-secondary text-dark')
                    .addClass(prioridadClass);

                // Abrir modal
                var modal = new bootstrap.Modal(document.getElementById('modalAsignacion'));
                modal.show();
            });

            // Filtros
            $('#filtroCategoria, #filtroPrioridad').on('change', function() {
                filtrarTickets();
            });

            $('#filtroCarga').on('change', function() {
                filtrarTecnicos();
            });

            function filtrarTickets() {
                var categoriaSeleccionada = $('#filtroCategoria').val().toLowerCase();
                var prioridadSeleccionada = $('#filtroPrioridad').val().toLowerCase();
                var count = 0;

                $('.ticket-item').each(function() {
                    var categoria = $(this).data('categoria').toLowerCase();
                    var prioridad = $(this).data('prioridad').toLowerCase();

                    var mostrar = true;

                    if (categoriaSeleccionada && categoria !== categoriaSeleccionada) {
                        mostrar = false;
                    }

                    if (prioridadSeleccionada && prioridad !== prioridadSeleccionada) {
                        mostrar = false;
                    }

                    if (mostrar) {
                        $(this).show();
                        count++;
                    } else {
                        $(this).hide();
                    }
                });

                $('#contadorTickets').text(count);
            }

            function filtrarTecnicos() {
                var cargaSeleccionada = $('#filtroCarga').val();
                var count = 0;

                $('.tecnico-card').each(function() {
                    var carga = $(this).data('carga');

                    if (!cargaSeleccionada || carga === cargaSeleccionada) {
                        $(this).show();
                        count++;
                    } else {
                        $(this).hide();
                    }
                });

                $('#contadorTecnicos').text(count);
            }

            // Destacar técnico seleccionado en el select
            $('#selectTecnico').on('change', function() {
                var carga = $(this).find(':selected').data('carga');

                if (carga === 'Alta') {
                    $(this).removeClass('border-success border-warning')
                        .addClass('border-danger border-3');
                } else if (carga === 'Media') {
                    $(this).removeClass('border-success border-danger')
                        .addClass('border-warning border-3');
                } else {
                    $(this).removeClass('border-danger border-warning')
                        .addClass('border-success border-3');
                }
            });
        });

        // Función para limpiar filtros
        function limpiarFiltros() {
            $('#filtroCategoria').val('');
            $('#filtroPrioridad').val('');
            $('#filtroCarga').val('');

            $('.ticket-item').show();
            $('.tecnico-card').show();

            $('#contadorTickets').text($('.ticket-item').length);
            $('#contadorTecnicos').text($('.tecnico-card').length);
        }
    </script>
}