@model ActivaPro.Application.DTOs.TecnicosDTO
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TituloDetalleTecnico"];
}

<h2 class="mb-4">@Localizer["TituloDetalleTecnico"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <!-- Id -->
            <dt class="col-sm-3">@Localizer["IdTecnico"]</dt>
            <dd class="col-sm-9">@Model.IdTecnico</dd>

            <!-- Usuario -->
            <dt class="col-sm-3">@Localizer["Usuario"]</dt>
            <dd class="col-sm-9">
                <strong>@(Model.NombreUsuario ?? Localizer["NoDisponible"].Value)</strong><br />
                <small class="text-muted">@Model.CorreoUsuario</small>
            </dd>

            <!-- Disponible -->
            <dt class="col-sm-3">@Localizer["Disponible"]</dt>
            <dd class="col-sm-9">
                @(Model.Disponible? Localizer["DisponibleSi"] : Localizer["DisponibleNo"])
            </dd>

            <!-- Carga Trabajo -->
            <dt class="col-sm-3">@Localizer["CargaTrabajo"]</dt>
            <dd class="col-sm-9">@Model.CargaTrabajo</dd>

            <!-- Especialidades -->
            <dt class="col-sm-3">@Localizer["Especialidades"]</dt>
            <dd class="col-sm-9">
                @if (Model.EspecialidadesNombres != null && Model.EspecialidadesNombres.Any())
                {
                    @string.Join(", ", Model.EspecialidadesNombres)
                }
                else
                {
                    <span class="text-muted">@Localizer["SinEspecialidades"]</span>
                }
            </dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.IdTecnico" class="btn btn-warning me-2">
                @Localizer["BtnEditar"]
            </a>

            <a asp-action="Index" class="btn btn-secondary">
                @Localizer["BtnVolver"]
            </a>
        </div>
    </div>
</div>