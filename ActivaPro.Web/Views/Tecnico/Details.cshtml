@model ActivaPro.Application.DTOs.TecnicosDTO

@{
        ViewData["Title"] = "Detalle Técnico";
}

<h2 class="mb-4">Detalle del Técnico</h2>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID Técnico</dt>
            <dd class="col-sm-9">@Model.IdTecnico</dd>

            <dt class="col-sm-3">Usuario</dt>
            <dd class="col-sm-9">
                <strong>@(Model.NombreUsuario ?? "N/D")</strong><br />
                <small class="text-muted">@Model.CorreoUsuario</small>
            </dd>

            <dt class="col-sm-3">Disponible</dt>
            <dd class="col-sm-9">@(Model.Disponible ? "Sí" : "No")</dd>

            <dt class="col-sm-3">Carga Trabajo</dt>
            <dd class="col-sm-9">@Model.CargaTrabajo</dd>

            <dt class="col-sm-3">Especialidades</dt>
            <dd class="col-sm-9">
                @if (Model.EspecialidadesNombres != null && Model.EspecialidadesNombres.Any())
                {
                    @string.Join(", ", Model.EspecialidadesNombres)
                }
                else
                {
                    <span class="text-muted">Sin especialidades</span>
                }
            </dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.IdTecnico" class="btn btn-warning me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
