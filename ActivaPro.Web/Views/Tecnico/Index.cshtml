@model IEnumerable<ActivaPro.Application.DTOs.TecnicosDTO>

@{
    ViewData["Title"] = "Técnicos";
}

<h1 class="mb-4">Técnicos</h1>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<p>
    <a class="btn btn-primary mb-3" asp-action="Create">
        <i class="bi bi-plus-circle"></i>Crear Nuevo Técnico
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID Técnico</th>
            <th>Usuario</th>
            <th>Carga Trabajo</th>
            <th>Disponible</th>
            <th>Especialidades</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.IdTecnico</td>
            <td>
                <strong>@(item.NombreUsuario ?? "N/D")</strong><br />
                <small class="text-muted">@item.CorreoUsuario</small>
            </td>
            <td>@item.CargaTrabajo</td>
            <td>
                @if (item.Disponible)
                {
                    <span class="text-success fw-bold">Sí</span>
                }
                else
                {
                    <span class="text-danger fw-bold">No</span>
                }
            </td>
            <td>
                @if (item.EspecialidadesNombres != null && item.EspecialidadesNombres.Any())
                {
                    @string.Join(", ", item.EspecialidadesNombres)
                }
                else
                {
                    <span class="text-muted">Sin especialidades</span>
                }
            </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.IdTecnico" class="btn btn-primary btn-sm">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.IdTecnico" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
        </tr>
    }
    </tbody>
</table>
