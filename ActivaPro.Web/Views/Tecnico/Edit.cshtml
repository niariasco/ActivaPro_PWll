@model ActivaPro.Application.DTOs.TecnicosDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer L

@{
    ViewData["Title"] = L["EditTechnician"];
    var catalogo = ViewBag.EspecialidadesCatalogo as IEnumerable<dynamic>;
    var selected = ViewBag.SelectedIds as List<int> ?? new();
}

<h2>@L["EditTechnician"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="IdTecnico" />
    <input type="hidden" asp-for="IdUsuario" />

    <!-- Nombre usuario -->
    <div class="mb-3">
        <label asp-for="NombreUsuario" class="form-label">@L["Username"]</label>
        <input asp-for="NombreUsuario" class="form-control" />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>

    <!-- Correo -->
    <div class="mb-3">
        <label asp-for="CorreoUsuario" class="form-label">@L["Email"]</label>
        <input asp-for="CorreoUsuario" class="form-control" />
        <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
    </div>

    <!-- Especialidades -->
    <div class="mb-3">
        <label class="form-label">@L["SpecialtiesMultiple"]</label>
        <select asp-for="EspecialidadesIds" multiple class="form-select" size="7">
            @if (catalogo != null)
            {
                foreach (var esp in catalogo)
                {
                    <option value="@esp.Id" selected="@(selected.Contains((int)esp.Id))">@esp.Nombre</option>
                }
            }
        </select>
        <small class="text-muted">@L["MultipleSelectionHelp"]</small>
        <span asp-validation-for="EspecialidadesIds" class="text-danger"></span>
    </div>

    <!-- Disponible -->
    <div class="mb-3">
        <label class="form-label">@L["Available"]</label>

        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Disponible" id="DisponibleTrue" value="true" />
            <label class="form-check-label" for="DisponibleTrue">@L["Yes"]</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Disponible" id="DisponibleFalse" value="false" />
            <label class="form-check-label" for="DisponibleFalse">@L["No"]</label>
        </div>

        <span asp-validation-for="Disponible" class="text-danger"></span>
    </div>

    <!-- Carga trabajo -->
    <div class="mb-3">
        <label class="form-label">@L["WorkloadReadOnly"]</label>
        <input asp-for="CargaTrabajo" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">@L["SaveChanges"]</button>
    <a asp-action="Index" class="btn btn-secondary">@L["Cancel"]</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
