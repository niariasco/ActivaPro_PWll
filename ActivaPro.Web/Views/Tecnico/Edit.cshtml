@model ActivaPro.Application.DTOs.TecnicosDTO
@{
    ViewData["Title"] = "Editar Técnico";
    var catalogo = ViewBag.EspecialidadesCatalogo as IEnumerable<dynamic>;
    var selected = ViewBag.SelectedIds as List<int> ?? new();
}

<h2>Editar Técnico</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdTecnico" />
    <input type="hidden" asp-for="IdUsuario" />

    <div class="mb-3">
        <label asp-for="NombreUsuario" class="form-label">Nombre de Usuario</label>
        <input asp-for="NombreUsuario" class="form-control" />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CorreoUsuario" class="form-label">Correo</label>
        <input asp-for="CorreoUsuario" class="form-control" />
        <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Especialidades (múltiple)</label>
        <select asp-for="EspecialidadesIds" multiple class="form-select" size="7">
            @if (catalogo != null)
            {
                foreach (var esp in catalogo)
                {
                    <option value="@esp.Id" selected="@(selected.Contains((int)esp.Id))">@esp.Nombre</option>
                }
            }
        </select>
        <small class="text-muted">Ctrl/Cmd para seleccionar varias.</small>
        <span asp-validation-for="EspecialidadesIds" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Disponible" class="form-label">Disponible</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Disponible" id="DisponibleTrue" value="true" />
            <label class="form-check-label" for="DisponibleTrue">Sí</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Disponible" id="DisponibleFalse" value="false" />
            <label class="form-check-label" for="DisponibleFalse">No</label>
        </div>
        <span asp-validation-for="Disponible" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Carga de Trabajo (solo lectura)</label>
        <input asp-for="CargaTrabajo" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
