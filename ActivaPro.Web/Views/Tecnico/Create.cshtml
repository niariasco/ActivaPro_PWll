@model ActivaPro.Application.DTOs.TecnicosDTO
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["TituloCrearTecnico"];
    var catalogo = ViewBag.EspecialidadesCatalogo as IEnumerable<dynamic>;
}

<h2>@Localizer["TituloCrearTecnico"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Nombre -->
    <div class="mb-3">
        <label asp-for="NombreUsuario" class="form-label">@Localizer["NombreUsuario"] *</label>
        <input asp-for="NombreUsuario" class="form-control" />
        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
    </div>

    <!-- Correo -->
    <div class="mb-3">
        <label asp-for="CorreoUsuario" class="form-label">@Localizer["Correo"] *</label>
        <input asp-for="CorreoUsuario" class="form-control" />
        <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
    </div>

    <!-- Especialidades -->
    <div class="mb-3">
        <label class="form-label">@Localizer["EspecialidadesMultiple"]</label>
        <select asp-for="EspecialidadesIds" multiple class="form-select" size="7">
            @if (catalogo != null)
            {
                foreach (var esp in catalogo)
                {
                    <option value="@esp.Id">@esp.Nombre</option>
                }
            }
        </select>
        <small class="text-muted">@Localizer["HintSeleccionMultiple"]</small>
        <span asp-validation-for="EspecialidadesIds" class="text-danger"></span>
    </div>

    <!-- Disponible (Radio Buttons) -->
    <div class="mb-3">
        <label asp-for="Disponible" class="form-label">@Localizer["Disponible"]</label>

        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Disponible" id="DisponibleTrue" value="true" />
            <label class="form-check-label" for="DisponibleTrue">@Localizer["Si"]</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Disponible" id="DisponibleFalse" value="false" />
            <label class="form-check-label" for="DisponibleFalse">@Localizer["No"]</label>
        </div>

        <span asp-validation-for="Disponible" class="text-danger"></span>
    </div>

    <!-- Carga de trabajo -->
    <div class="mb-3">
        <label class="form-label">@Localizer["CargaTrabajo"]</label>
        <input asp-for="CargaTrabajo" class="form-control" readonly />
    </div>

    <!-- Botones -->
    <button type="submit" class="btn btn-primary">@Localizer["Guardar"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["Cancelar"]</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
