@model ActivaPro.Application.DTOs.CategoriasDTO
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CategoryDetails"];
}

<h1 class="mb-4">@Localizer["CategoryDetails"]</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model?.nombre_categoria</h5>

        <dl class="row">
            <dt class="col-sm-3">@Localizer["ID"]</dt>
            <dd class="col-sm-9">@Model?.id_categoria</dd>

            <dt class="col-sm-3">@Localizer["Tags"]</dt>
            <dd class="col-sm-9">
                @(Model?.Etiquetas != null && Model.Etiquetas.Any()
                                ? string.Join(", ", Model.Etiquetas)
                                : Localizer["NoTags"])
            </dd>

            <dt class="col-sm-3">@Localizer["Specialties"]</dt>
            <dd class="col-sm-9">
                @(Model?.Especialidades != null && Model.Especialidades.Any()
                                ? string.Join(", ", Model.Especialidades)
                                : Localizer["NoSpecialties"])
            </dd>

            <dt class="col-sm-3">SLA</dt>
            <dd class="col-sm-9">
                @(string.IsNullOrWhiteSpace(Model?.SLA)
                                ? Localizer["NoSLA"]
                                : Model.SLA)

                @if (Model?.id_sla != null)
                {
                    <small class="text-muted ms-2">(ID: @Model.id_sla)</small>
                }
            </dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.id_categoria" class="btn btn-warning me-2">
                @Localizer["Edit"]
            </a>

            <a asp-action="Index" class="btn btn-secondary">
                @Localizer["BackToList"]
            </a>
        </div>
    </div>
</div>
