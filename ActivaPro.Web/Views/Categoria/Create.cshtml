@model ActivaPro.Application.DTOs.CategoriasDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer L

@{
    ViewData["Title"] = L["CreateCategory"];
    var slasDic = ViewBag.SLAsDescripciones as Dictionary<int, string>;
    var slaIds = ViewBag.SLAs as List<int>;
}

<h2 class="mb-4">@L["CreateCategory"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Nombre -->
    <div class="mb-3">
        <label asp-for="nombre_categoria" class="form-label">@L["Name"] *</label>
        <input asp-for="nombre_categoria" class="form-control" />
        <span asp-validation-for="nombre_categoria" class="text-danger"></span>
    </div>

    <!-- Etiquetas -->
    <div class="mb-3">
        <label class="form-label">@L["TagsMultiple"]</label>
        <select asp-for="Etiquetas" class="form-select" multiple size="6">
            @if (ViewBag.Etiquetas != null)
            {
                foreach (var et in ViewBag.Etiquetas as List<string>)
                {
                    <option value="@et">@et</option>
                }
            }
        </select>
        <small class="text-muted">@L["MultipleSelectionHelp"]</small>
        <span asp-validation-for="Etiquetas" class="text-danger"></span>
    </div>

    <!-- Especialidades -->
    <div class="mb-3">
        <label class="form-label">@L["SpecialtiesMultiple"]</label>
        <select asp-for="Especialidades" class="form-select" multiple size="6">
            @if (ViewBag.Especialidades != null)
            {
                foreach (var esp in ViewBag.Especialidades as List<string>)
                {
                    <option value="@esp">@esp</option>
                }
            }
        </select>
        <small class="text-muted">@L["MultipleSelectionHelp"]</small>
        <span asp-validation-for="Especialidades" class="text-danger"></span>
    </div>

    <!-- SLA -->
    <div class="mb-3">
        <label class="form-label">SLA</label>
        <select asp-for="id_sla" id="slaSelect" class="form-select">
            <option value="">-- @L["SelectSLA"] --</option>
            @if (slaIds != null && slaIds.Any())
            {
                foreach (var id in slaIds)
                {
                    var desc = (slasDic != null && slasDic.ContainsKey(id))
                    ? slasDic[id]
                    : $"SLA {id}";
                    <option value="@id">@desc</option>
                }
            }
            <option value="-1"> @L["CustomSLA"]</option>
        </select>
        <span asp-validation-for="id_sla" class="text-danger"></span>
    </div>

    <!-- Info SLA -->
    <div id="slaInfo" class="alert alert-info d-none"></div>

    <!-- SLA personalizado -->
    <div id="slaCustomFields" class="border rounded p-3 mb-3 d-none">
        <h6 class="fw-bold mb-3">@L["CustomSLATitle"]</h6>
        <div class="mb-3">
            <label asp-for="SLA" class="form-label">@L["Description"]</label>
            <input asp-for="SLA" class="form-control" placeholder="@L["SLAPlaceholder"]" />
            <span asp-validation-for="SLA" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> @L["Save"]
        </button>
        <a asp-action="Index" class="btn btn-secondary">@L["Cancel"]</a>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const slaSelect = document.getElementById('slaSelect');
            const customBox = document.getElementById('slaCustomFields');
            const infoBox = document.getElementById('slaInfo');

            // Si el backend te envía también tiempos (extiende el ViewBag cuando lo necesites)
            // podrías serializar JSON para mostrar aquí. Por ahora usamos solo la descripción del <option>.
            function updateSlaUI() {
                const val = slaSelect.value;
                if (val === '-1') {
                    customBox.classList.remove('d-none');
                    infoBox.classList.add('d-none');
                    infoBox.innerHTML = '';
                } else if (val) {
                    customBox.classList.add('d-none');
                    // Mostrar info básica usando el texto ya en el option
                    const selectedText = slaSelect.options[slaSelect.selectedIndex].text;
                    infoBox.innerHTML = `<strong>SLA Seleccionado:</strong> ${selectedText}`;
                    infoBox.classList.remove('d-none');
                } else {
                    customBox.classList.add('d-none');
                    infoBox.classList.add('d-none');
                    infoBox.innerHTML = '';
                }
            }

            slaSelect.addEventListener('change', updateSlaUI);
            updateSlaUI();
        })();
    </script>
}
