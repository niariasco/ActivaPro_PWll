@model IEnumerable<ActivaPro.Application.DTOs.CategoriasDTO>

@{
    ViewData["Title"] = "Categorías";
}

<h1 class="mb-4">Categorías</h1>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a class="btn btn-primary mb-3" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Crear Nueva Categoría
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Etiquetas</th>
            <th>Especialidades</th>
            <th>SLA</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id_categoria</td>
                <td><strong>@item.nombre_categoria</strong></td>
                <td>
                    @if (item.Etiquetas != null && item.Etiquetas.Any())
                    {
                        @string.Join(", ", item.Etiquetas)
                    }
                    else
                    {
                        <span class="text-muted">Sin etiquetas</span>
                    }
                </td>
                <td>
                    @if (item.Especialidades != null && item.Especialidades.Any())
                    {
                        @string.Join(", ", item.Especialidades)
                    }
                    else
                    {
                        <span class="text-muted">Sin especialidades</span>
                    }
                </td>
                <td>@(string.IsNullOrEmpty(item.SLA) ? "Sin SLA" : item.SLA)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id_categoria" class="btn btn-primary btn-sm">
                        <i class="bi bi-eye"></i> 
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.id_categoria" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil-square"></i> 
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>