@model IEnumerable<ActivaPro.Application.DTOs.CategoriasDTO>

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer L

@{
    ViewData["Title"] = L["TitleCategories"];
}

<h1 class="mb-4">@L["TitleCategories"]</h1>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a class="btn btn-primary mb-3" asp-action="Create">
        <i class="bi bi-plus-circle"></i> @L["BtnCreateCategory"]
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>@L["TblID"]</th>
            <th>@L["TblName"]</th>
            <th>@L["TblTags"]</th>
            <th>@L["TblSpecialties"]</th>
            <th>@L["TblSLA"]</th>
            <th>@L["TblActions"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id_categoria</td>
                <td><strong>@item.nombre_categoria</strong></td>

                <!-- Etiquetas -->
                <td>
                    @if (item.Etiquetas != null && item.Etiquetas.Any())
                    {
                        @string.Join(", ", item.Etiquetas)
                    }
                    else
                    {
                        <span class="text-muted">@L["NoTags"]</span>
                    }
                </td>

                <!-- Especialidades -->
                <td>
                    @if (item.Especialidades != null && item.Especialidades.Any())
                    {
                        @string.Join(", ", item.Especialidades)
                    }
                    else
                    {
                        <span class="text-muted">@L["NoSpecialties"]</span>
                    }
                </td>

                <!-- SLA -->
                <td>
                    @(string.IsNullOrEmpty(item.SLA) ? L["NoSLA"] : item.SLA)
                </td>

                <!-- Acciones -->
                <td>
                    <a asp-action="Details"
                       asp-route-id="@item.id_categoria"
                       class="btn btn-primary btn-sm"
                       title="@L["ViewDetails"]">
                        <i class="bi bi-eye"></i>
                    </a>

                    <a asp-action="Edit"
                       asp-route-id="@item.id_categoria"
                       class="btn btn-primary btn-sm"
                       title="@L["EditCategory"]">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
