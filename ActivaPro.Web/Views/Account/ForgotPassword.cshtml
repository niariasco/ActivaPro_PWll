@model ActivaPro.Application.DTOs.ForgotPasswordDTO
@{
    ViewData["Title"] = "Olvidaste tu contraseña";
}
<div class="container mt-5" style="max-width:520px;">
    <h4 class="mb-3" style="color:#1E4E8C;">Recuperar acceso</h4>

    <!-- Resumen de validación del servidor -->
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="ForgotPassword" method="post" novalidate>
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Correo</label>
            <input asp-for="Correo" type="email" class="form-control" />
            <span class="text-danger" asp-validation-for="Correo"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Última contraseña</label>
            <input asp-for="UltimaContrasena" type="password" class="form-control" />
            <span class="text-danger" asp-validation-for="UltimaContrasena"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Nueva contraseña</label>
            <input asp-for="NuevaContrasena" type="password" class="form-control" />
            <span class="text-danger" asp-validation-for="NuevaContrasena"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Confirmar nueva contraseña</label>
            <input asp-for="ConfirmarNuevaContrasena" type="password" class="form-control" />
            <span class="text-danger" asp-validation-for="ConfirmarNuevaContrasena"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <a asp-action="Login" class="btn btn-secondary">Volver a Login</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}