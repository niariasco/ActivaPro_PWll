@model ActivaPro.Application.DTOs.ProfileDTO
@{
    ViewData["Title"] = "Perfil";
}
<div class="container mt-4" style="max-width:640px;">
    <h4 class="mb-3" style="color:#1E4E8C;">Mi Perfil</h4>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card main-card">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Número Sucursal</label>
                <input asp-for="NumeroSucursal" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input asp-for="Correo" class="form-control" readonly />
            </div>

            <div class="d-flex gap-2">
                <a asp-action="ChangePassword" class="btn btn-outline-secondary">Cambiar contraseña</a>
            </div>
        </div>
    </div>
</div>
