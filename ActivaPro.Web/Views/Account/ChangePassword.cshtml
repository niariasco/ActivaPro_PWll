@model ActivaPro.Application.DTOs.ChangePasswordDTO
@{
    ViewData["Title"] = "Cambiar Contraseña";
}
<div class="container mt-4" style="max-width:520px;">
    <h4 class="mb-3" style="color:#1E4E8C;">Cambiar Contraseña</h4>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="ChangePassword" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="IdUsuario" />
        <div class="mb-3">
            <label class="form-label">Contraseña actual</label>
            <input asp-for="ContrasenaActual" type="password" class="form-control" />
            <span class="text-danger" asp-validation-for="ContrasenaActual"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Nueva contraseña</label>
            <input asp-for="NuevaContrasena" type="password" class="form-control" />
            <span class="text-danger" asp-validation-for="NuevaContrasena"></span>
        </div>
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-action="Profile" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}