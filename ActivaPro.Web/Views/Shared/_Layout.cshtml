@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer L
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ActivaPro.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ActivaPro.Web.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
        }

        /* Navbar azul mar cálido */
        .navbar-custom {
            background-color: #1E4E8C;
        }

            .navbar-custom .nav-link,
            .navbar-custom .navbar-brand {
                color: #ffffff;
            }

                .navbar-custom .nav-link:hover {
                    color: #cce0ff;
                }

        /* Footer azul */
        .footer-custom {
            background-color: #1E4E8C;
            color: #ffffff;
            padding: 15px 0;
            text-align: center;
        }

            .footer-custom a {
                color: #ffffff;
                text-decoration: underline;
            }

                .footer-custom a:hover {
                    color: #cce0ff;
                }

        /* Botones primarios */
        .btn-primary {
            background-color: #1E4E8C;
            border-color: #1E4E8C;
        }

            .btn-primary:hover {
                background-color: #143763;
                border-color: #143763;
            }

        /* Tarjetas para contenedor principal */
        .main-card {
            background-color: #ffffff;
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            padding: 20px;
            margin-top: 20px;
        }
    </style>
    @* Renderizar estilos adicionales de vistas individuales *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">ActivaPro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@L["NavHome"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">@L["NavPrivacy"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categoria" asp-action="Index">@L["NavCategories"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tecnico" asp-action="Index">@L["NavTechnicians"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ticketes" asp-action="Index">@L["NavTickets"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Asignaciones" asp-action="Index">@L["NavAssignments"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Asignaciones" asp-action="MisAsignaciones">
                                <i class="bi bi-person-lines-fill"></i> @L["NavMyAssignments"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Valoraciones" asp-action="Index">
                                <i class="bi bi-star-fill"></i> @L["Valoracion"]
                            </a>
                        </li>
                       
                    </ul>

                    <div class="d-flex align-items-center gap-3">
                        <partial name="_AuthStatus" />
                        <partial name="_NotificacionesPanel" />

                        <!-- Selector de idioma con cookie (persiste) -->
                        <form asp-controller="Language" asp-action="Set" method="post" class="d-inline">
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-translate"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><button type="submit" name="culture" value="es" class="dropdown-item">Español</button></li>
                                    <li><button type="submit" name="culture" value="en" class="dropdown-item">English</button></li>
                                </ul>
                            </div>
                        </form>

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <a class="btn btn-link text-white p-0" asp-controller="Account" asp-action="Profile" title="Mi Perfil">
                                <i class="bi bi-person-circle fs-5"></i>
                            </a>
                            <form asp-controller="Account" asp-action="LogoutPost" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-light">@L["NavLogout"]</button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Login">@L["NavLogin"]</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            <div class="main-card">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer-custom">
        &copy; 2025 - ActivaPro.Web - <a asp-controller="Home" asp-action="Privacy">@L["NavPrivacy"]</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/notificaciones.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>