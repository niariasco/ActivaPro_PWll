@model IEnumerable<ActivaPro.Application.DTOs.ValoracionDTO>

@{
    ViewData["Title"] = "Valoraciones de Tickets";
    var rolUsuario = ViewBag.RolUsuario as string ?? "Cliente";
    var idUsuario = ViewBag.IdUsuario ?? 0;
    var nombreUsuario = ViewBag.NombreUsuario as string ?? "Usuario";
    var estadisticas = ViewBag.Estadisticas as ActivaPro.Application.DTOs.ValoracionEstadisticasDTO;
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-star-fill text-warning"></i> Valoraciones de Tickets
                    </h2>
                    <p class="text-muted mb-0">
                        <i class="bi bi-person-badge"></i> <strong>@nombreUsuario</strong> - @rolUsuario
                    </p>
                </div>
                <div>
                    <a asp-controller="Ticketes" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a Tickets
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes de éxito/error -->
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @ViewBag.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Estadísticas -->
    @if (estadisticas != null && estadisticas.TotalValoraciones > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-bar-chart-fill"></i> Estadísticas de Valoraciones
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <!-- Total -->
                            <div class="col-md-2">
                                <div class="stat-card">
                                    <h3 class="text-primary mb-1">@estadisticas.TotalValoraciones</h3>
                                    <small class="text-muted">Total</small>
                                </div>
                            </div>

                            <!-- Promedio -->
                            <div class="col-md-2">
                                <div class="stat-card">
                                    <h3 class="text-warning mb-1">
                                        @estadisticas.PromedioGeneral.ToString("0.00") ⭐
                                    </h3>
                                    <small class="text-muted">Promedio</small>
                                </div>
                            </div>

                            <!-- Distribución -->
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col">
                                        <div class="text-center">
                                            <h5 class="mb-1 text-success">@estadisticas.Excelente</h5>
                                            <small class="text-muted">⭐⭐⭐⭐⭐</small>
                                            <div class="progress mt-2" style="height: 10px;">
                                                <div class="progress-bar bg-success" style="width: @estadisticas.PorcentajeExcelente%"></div>
                                            </div>
                                            <small class="text-muted">@estadisticas.PorcentajeExcelente.ToString("0.0")%</small>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="text-center">
                                            <h5 class="mb-1 text-info">@estadisticas.MuyBueno</h5>
                                            <small class="text-muted">⭐⭐⭐⭐</small>
                                            <div class="progress mt-2" style="height: 10px;">
                                                <div class="progress-bar bg-info" style="width: @estadisticas.PorcentajeMuyBueno%"></div>
                                            </div>
                                            <small class="text-muted">@estadisticas.PorcentajeMuyBueno.ToString("0.0")%</small>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="text-center">
                                            <h5 class="mb-1 text-warning">@estadisticas.Bueno</h5>
                                            <small class="text-muted">⭐⭐⭐</small>
                                            <div class="progress mt-2" style="height: 10px;">
                                                <div class="progress-bar bg-warning" style="width: @estadisticas.PorcentajeBueno%"></div>
                                            </div>
                                            <small class="text-muted">@estadisticas.PorcentajeBueno.ToString("0.0")%</small>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="text-center">
                                            <h5 class="mb-1" style="color: orange;">@estadisticas.Regular</h5>
                                            <small class="text-muted">⭐⭐</small>
                                            <div class="progress mt-2" style="height: 10px;">
                                                <div class="progress-bar" style="width: @estadisticas.PorcentajeRegular%; background-color: orange;"></div>
                                            </div>
                                            <small class="text-muted">@estadisticas.PorcentajeRegular.ToString("0.0")%</small>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="text-center">
                                            <h5 class="mb-1 text-danger">@estadisticas.Malo</h5>
                                            <small class="text-muted">⭐</small>
                                            <div class="progress mt-2" style="height: 10px;">
                                                <div class="progress-bar bg-danger" style="width: @estadisticas.PorcentajeMalo%"></div>
                                            </div>
                                            <small class="text-muted">@estadisticas.PorcentajeMalo.ToString("0.0")%</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Listado de Valoraciones -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-list-stars"></i>
                        Listado de Valoraciones
                        <span class="badge bg-light text-dark">@Model.Count()</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center py-5">
                            <i class="bi bi-info-circle" style="font-size: 3rem; display: block; margin-bottom: 1rem;"></i>
                            <h5>No hay valoraciones registradas</h5>
                            @if (rolUsuario.ToLower() == "cliente")
                            {
                                <p class="mb-0">Las valoraciones aparecerán aquí cuando cierres tickets y los valores.</p>
                            }
                        </div>
                    }
                    else
                    {
                        <!-- Vista de Tarjetas para mejor visualización -->
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            @foreach (var valoracion in Model)
                            {
                                <div class="col">
                                    <div class="card h-100 border-warning shadow-sm hover-card">
                                        <div class="card-header bg-light">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <strong>#@valoracion.IdValoracion</strong>
                                                </small>
                                                <span class="badge bg-@valoracion.ColorSatisfaccion">
                                                    @valoracion.Puntaje/5 ⭐
                                                </span>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <!-- Ticket Info -->
                                            <h6 class="card-title mb-2">
                                                <a asp-controller="Ticketes" asp-action="Details" asp-route-id="@valoracion.IdTicket"
                                                   class="text-decoration-none text-dark">
                                                    <i class="bi bi-ticket-detailed text-primary"></i>
                                                    Ticket #@valoracion.IdTicket
                                                </a>
                                            </h6>
                                            <p class="card-text text-muted small mb-2">
                                                @valoracion.TituloTicket
                                            </p>

                                            <!-- Estrellas -->
                                            <div class="mb-3 text-center py-2 bg-light rounded">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= valoracion.Puntaje)
                                                    {
                                                        <i class="bi bi-star-fill text-warning fs-5"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-muted fs-5"></i>
                                                    }
                                                }
                                            </div>

                                            <!-- Comentario -->
                                            @if (!string.IsNullOrEmpty(valoracion.Comentario))
                                            {
                                                <p class="card-text small fst-italic text-muted mb-3">
                                                    "@(valoracion.Comentario.Length > 100 ? valoracion.Comentario.Substring(0, 100) + "..." : valoracion.Comentario)"
                                                </p>
                                            }

                                            <!-- Detalles -->
                                            <div class="mb-2">
                                                <small class="text-muted d-block">
                                                    <i class="bi bi-person"></i> <strong>Cliente:</strong> @valoracion.NombreCliente
                                                </small>
                                                @if (rolUsuario.ToLower() != "técnico" && rolUsuario.ToLower() != "tecnico")
                                                {
                                                    <small class="text-muted d-block">
                                                        <i class="bi bi-wrench"></i> <strong>Técnico:</strong> @valoracion.NombreTecnico
                                                    </small>
                                                }
                                                <small class="text-muted d-block">
                                                    <i class="bi bi-calendar"></i> @valoracion.FechaValoracion.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-white border-top-0">
                                            <a asp-action="Details" asp-route-id="@valoracion.IdValoracion"
                                               class="btn btn-sm btn-outline-warning w-100">
                                                <i class="bi bi-eye"></i> Ver Detalles
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stat-card {
            padding: 1rem;
            border-radius: 0.5rem;
            background: #f8f9fa;
        }

        .progress {
            background-color: #e9ecef;
        }

        .hover-card {
            transition: all 0.3s ease;
        }

            .hover-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
            }
    </style>
}